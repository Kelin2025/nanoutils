{
  "name": "nanoutils",
  "version": "0.0.8",
  "description": "Tiniest JavaScript utils library",
  "main": "cjs/index.js",
  "module": "lib/index.js",
  "repository": "https://github.com/kelin2025/nanoutils",
  "author": "Kelin2025 <kelin2025@yandex.ru>",
  "license": "MIT",
  "config": {
    "ghooks": {
      "pre-push": "npm run size && git add SIZES.md && git commit -m ':speech_balloon: Recalculating size'"
    }
  },
  "scripts": {
    "dev": "jest --watchAll --verbose",
    "test": "jest",
    "size": "node ./misc/cli/size.js",
    "method:add": "node ./misc/cli/add-method.js",
    "method:rename": "node ./misc/cli/rename-method.js",
    "build:cjs": "babel lib --out-dir cjs --ignore test.js",
    "build": "npm run build:cjs && create-index --ignoreUnsafe --update lib && npm run size",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-es2015-modules-simple-commonjs": "^0.3.0",
    "chalk": "^2.3.0",
    "create-index": "^2.3.0",
    "flow": "^0.2.3",
    "flow-bin": "^0.62.0",
    "ghooks": "^2.0.2",
    "jest": "^22.0.4",
    "ramda": "^0.25.0",
    "size-limit": "^0.13.2"
  }
}
